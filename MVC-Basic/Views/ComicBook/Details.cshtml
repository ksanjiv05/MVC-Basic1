@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>Welcome Sanjiv World</h1>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Issue Number : #@ViewBag.IssueNumber</h2>
        <h5>Discription : </h5>
        <p>@Html.Raw(ViewBag.description)</p>

        @if (ViewBag.artists.Length > 0)
        {
            <h5>Artist :</h5>
            <div>
                <ul>
                @foreach (var ar in ViewBag.artists)
                {

                   <li> @ar</li>
                }
                </ul>
            </div>
        }
    </div>
</body>
</html>
